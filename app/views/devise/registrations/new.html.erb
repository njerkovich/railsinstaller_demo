
<div class="row">
  <div class="span4">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
    <%= devise_error_messages! %>

      <fieldset>
        <legend>Sign up</legend>

        <div><%= f.input :first_name %><br /></div>
        <div><%= f.input :last_name %><br /></div>
    	  <div><%= f.input :profile_name %><br /></div>
    	  <div><%= f.input :email, :autofocus => true %><br /></div>
        <div><%= f.input :password %><br /></div>
        <div><%= f.input :password_confirmation %><br /></div>

    <div><%= f.button :submit, "Sign up" %></div>
  </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
  <div class="span8">
    <h2>Signing up at College Middle is easy!</h2>
      <strong><p>Make sure and use your .EDU email address.</p></strong>
  </div>
</div>
